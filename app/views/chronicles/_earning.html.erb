<div class="list-group-item row list-group-item-success"
   data-popup-top="true" data-content="<%= triggered_by(entry.user) %>"
  >
  <span class="col-md-1">
    <%= image_tag gravatar_url_for(entry.hacker.email, 24) %>
  </span>
  <span class="col-md-2">
    +<%= entry.points %>
  </span>
  <span class="col-md-2">
    <%= l(entry.created_at, :format => :short) %>
  </span>
  <span class="col-md-4">
    <%= entry.chronicle_text %>
  </span>
  <% if entry.cancel.blank? %>
    <%= link_to(cancel_button, cancel_earning_path(entry), :method => :post )%>
  <% end %>
</div>
<% if entry.cancel.present? %>
  <%= render({
    :partial => 'hackers/chronicle/earning_cancel', 
    :locals  => {:entry => entry.cancel} 
  }) %>
<% end %>
